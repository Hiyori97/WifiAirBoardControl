<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/connect"
        style="@style/ButtonStyle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp"
        android:text="连接开发板" />

    <Button
        android:id="@+id/setMode"
        style="@style/ButtonStyle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="36dp"
        android:text="设置模式" />

    <TextView
        android:id="@+id/PWMControl"
        style="@style/TextViewStyle"
        android:text="PWM实际值:100" />

    <TextView
        android:id="@+id/angleControl"
        style="@style/TextViewStyle"
        android:layout_below="@id/PWMControl"
        android:text="角度实际值:90" />

    <TextView
        android:id="@+id/showMode"
        style="@style/TextViewStyle"
        android:layout_below="@id/angleControl"
        android:text="当前模式:PWM" />

    <TextView
        android:id="@+id/isLink"
        style="@style/TextViewStyle"
        android:layout_below="@id/showMode"
        android:text="连接状态:已连接" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/isLink"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/angle"
        style="@style/TextViewStyle"
        android:layout_below="@id/seekBar"
        android:text="当前设定角度值是:0 / 90" />

</RelativeLayout>
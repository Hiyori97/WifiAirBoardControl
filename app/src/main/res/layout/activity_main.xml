    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:inputType="text"-->
    <!--android:labelFor="@+id/sendAnyChar" />-->

</RelativeLayout>